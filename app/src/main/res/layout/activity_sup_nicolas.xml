<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ernest.supnicolascage.SupNicolasActivity">


    <Button
        android:id="@+id/Commencer_b"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Commencer"
        android:visibility="visible"
        android:layout_above="@+id/chronomod1_b"
        android:layout_alignStart="@+id/Scores_b" />

    <Button
        android:id="@+id/Scores_b"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Scores"
        android:visibility="visible"
        android:layout_below="@+id/chronomod1_b"
        android:layout_alignStart="@+id/chronomod2_b" />

    <Button
        android:id="@+id/normal_b"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Commencer_b"
        android:layout_alignStart="@+id/Commencer_b"
        android:text="Normal"
        android:visibility="invisible" />

    <Button
        android:id="@+id/chronomod1_b"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/Commencer_b"
        android:layout_centerVertical="true"
        android:text="ChronoMod1"
        android:visibility="invisible" />

    <Button
        android:id="@+id/chronomod2_b"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/chronomod1_b"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="ChronoMod2"
        android:visibility="invisible" />

    <Button
        android:id="@+id/retour"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/chronomod2_b"
        android:layout_centerHorizontal="true"
        android:text="RETOUR"
        android:visibility="invisible" />

    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:textSize="30sp"
        android:visibility="invisible"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/my_count_field"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/chronometer2"
        android:layout_alignTop="@+id/chronometer2"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/scorefin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/photo_view"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    =


</RelativeLayout>
